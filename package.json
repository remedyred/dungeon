{
	"name": "@snickbit/dungeon",
	"version": "0.0.0",
	"description": "Simple procedural dungeon generator",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"prebuild": "pnpm run index",
		"build": "tsup",
		"bundle": "esbuild --bundle --outfile=dist/index.bundle.js --target=es2020 src/index.ts --sourcemap",
		"clean": "shx rm -rf ./dist ",
		"depcheck": "depcheck",
		"index": "indexer",
		"lint": "eslint **/*.{ts,json} --cache --fix",
		"meta": "pnpm run prod --metafile",
		"prod": "pnpm run clean && pnpm run build --minify",
		"pretest": "pnpm run lint",
		"test": "jest",
		"watch": "pnpm run build --watch",
		"watch:bundle": "pnpm run bundle --watch"
	},
	"jest": {
		"bail": false,
		"preset": "ts-jest",
		"roots": [
			"src",
			"__tests__"
		],
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"__tests__/helpers.ts",
			"/node_modules/"
		]
	},
	"dependencies": {
		"@snickbit/indexer": "^2.5.7",
		"@snickbit/out": "^2.0.37",
		"@snickbit/utilities": "^3.2.0",
		"browser-or-node": "^2.0.0",
		"chance": "^1.1.8",
		"random-word-slugs": "^0.1.6"
	},
	"devDependencies": {
		"@types/chance": "^1.1.3",
		"@types/jest": "28.1.6",
		"@types/node": "18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.30.6",
		"esbuild": "^0.14.49",
		"eslint": "^8.19.0",
		"eslint-plugin-beautiful-sort": "^2.0.3",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-json-files": "^1.3.0",
		"eslint-plugin-sort-class-members": "^1.14.1",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.7",
		"tsup": "6.1.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
